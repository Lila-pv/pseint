OBJS_DIR=../temp/upd_lnx_rls
GPP=g++
CXXFLAGS_OPT=-O2
CXXFLAGS=${CXXFLAGS_OPT}
LDFLAGS_OPT=-s
LDFLAGS=${LDFLAGS_OPT}

all: ../temp/upd_lnx_rls ../bin/bin/updatem

include Makefile.common

clean:
	rm -rf ${OBJS} ../bin/bin/updatem

../bin/bin/updatem: ${OBJS}
	${GPP} ${OBJS} ${LDFLAGS} -o $@

${OBJS_DIR}:
	mkdir -p ${OBJS_DIR}
