BASE=/opt/mac
SDK=${BASE}/SDKs/MacOSX10.4u.sdk
OBJS_DIR=../temp/drw2_ppc_rls
GPP=powerpc-apple-darwin8-g++
GCC=gcc
CXXFLAGS= -O2 -framework OpenGL -framework GLUT 
LIBS= -framework OpenGL -framework GLUT 

all: ${OBJS_DIR} ../bin/psdraw2

include Makefile.common

clean:
	rm -rf ${OBJS} ../bin/psdraw2

../bin/psdraw2: ${OBJS}
	${GPP} ${OBJS} ${LIBS} -o $@

${OBJS_DIR}:
	mkdir ${OBJS_DIR}

