OBJS_DIR=../temp/drw3_lnx2_rls
GPP=g++
CXXFLAGS_OPT=-O2
CXXFLAGS=${CXXFLAGS_OPT} `wx-config --cppflags --unicode=no --version=2.8` -D_USE_DF
LDFLAGS_OPT=-s
LDFLAGS=${LDFLAGS_OPT} -lGL -lGLU -lglut -ldl `wx-config --libs --unicode=no --version=2.8` `wx-config --libs --unicode=no --version=2.8 gl` -lX11

all: ${OBJS_DIR} ../bin/bin2/psdraw3

include Makefile.common

clean:
	rm -rf ${OBJS} ../bin/bin2/psdraw3

../bin/bin2/psdraw3: ${OBJS}
	${GPP} ${OBJS} ${LDFLAGS} -o $@

${OBJS_DIR}:
	mkdir ${OBJS_DIR}

